{{> header}}
{{> background}}

<div class="homepage">
    <h1>Settings</h1>

    <div>
        <ul>
            {{#each items}}
                <li><a href="#">{{this}}</a></li>
            {{/each}}
            <li><a href="/">Log Out</a></li>
        </ul>

        <div id="removeAccountField" class="fieldsetNone">
            <label for="username">Enter your username</label>
            <input type="text" name="username" id="user">
            <input type="submit" value="Remove Account" name="remove" id="remove">
        </div>

        <button id="btnRemoveAccount">Remove Account</button>
    </div>
</div>

{{> nav}}

<script src="/removeAcc.js" defer></script>
